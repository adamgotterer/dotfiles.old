--smart-case

--sort-files

# Always color, even if piping to another program
--color

# HAML & SASS
--type-add=ruby=.haml,.sass,.scss
--type-add=html=.haml
--type-add=css=.sass,.scss

# Ruby
--type-add=ruby=Rakefile,Capfile,Gemfile

# JSON
--type-set=json=.json
--type-add=js=.js
--type-add=yaml=.json

# Conf
--type-set=conf=.conf,.config

# Markdown, Textile, Rdoc & POD
--type-set=markdown=.markdown,.md,.mdown,.mkd,.mkdn
--type-set=textile=.textile
--type-set=rdoc=.rdoc
--type-set=pod=.pod

# documentation
--type-set=documentation=.markdown,.md,.mdown,.mkd,.mkdn,.textile,.rdoc,.pod.txt

# CoffeeScript
--type-set=coffeescript=.coffee

# Handlebars
--type-set=handlebars=.handlebars

--ignore-dir=log
--ignore-dir=tmp
--ignore-dir=.vagrant

--ignore-file=ext:pg_dump
--ignore-file=ext:csv
--ignore-file=ext:log
--ignore-file=ext:tfstate
